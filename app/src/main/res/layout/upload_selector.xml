<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:padding="10dp"
            android:layout_gravity="center">


            <ImageButton
                android:id="@+id/pick_image"
                android:contentDescription="Pick Image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/ic_picture"
                android:background="@drawable/round_image" />

            <ImageButton
                android:id="@+id/pick_audio"
                android:contentDescription="Pick Audio"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/ic_audiotrack"
                android:background="@drawable/round_audio" />

            <ImageButton
                android:id="@+id/pick_video"
                android:contentDescription="Pick Video"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_row="0"
                android:layout_column="2"
                android:src="@drawable/ic_video"
                android:background="@drawable/round_video" />

            <ImageButton
                android:id="@+id/pick_document"
                android:contentDescription="Pick Document"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_row="0"
                android:layout_column="3"
                android:src="@drawable/ic_file"
                android:background="@drawable/round_doc" />


        </GridLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>